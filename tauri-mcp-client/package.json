{
  "name": "tauri-mcp-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "fastapi:setup": "./scripts/setup-and-run-fastapi.sh",
    "fastapi:dev": "cd resource/mcp-client-python/api && source venv/bin/activate && python main.py",
    "fastapi:create-venv": "cd resource/mcp-client-python/api && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "fastapi:rebuild": "./scripts/rebuild-fastapi-env.sh",
    "dev:all": "concurrently \"npm run dev\" \"npm run fastapi:setup\"",
    "tauri:dev:all": "concurrently \"npm run tauri:dev\" \"npm run fastapi:setup\"",
    "tauri:dev:auto": "tauri dev",
    "test:fastapi": "cd resource/mcp-client-python/api && source venv/bin/activate && python -c \"import main; print('FastAPI imports OK')\""
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@tauri-apps/plugin-shell": "^2.3.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tauri-apps/cli": "^2.8.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "ignore-loader": "^0.1.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
